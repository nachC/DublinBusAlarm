<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchScreenFragment">

    <fragment
        android:id="@+id/searchScreenFragment"
        android:name="com.nachc.dba.searchscreen.SearchScreenFragment"
        android:label="search_screen_fragment"
        tools:layout="@layout/search_screen_fragment" >
        <action
            android:id="@+id/action_searchScreenFragment_to_routeListScreenFragment"
            app:destination="@id/routeListScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/routeListScreenFragment"
        android:name="com.nachc.dba.routelistscreen.RouteListScreenFragment"
        android:label="RouteListScreenFragment" >
        <action
            android:id="@+id/action_routeListScreenFragment_to_placeholder"
            app:destination="@id/placeholder" />
    </fragment>
    <fragment android:id="@+id/placeholder" />
</navigation>